<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @tree.title %>
</p>

<p>
  <strong>Picture:</strong>
  <%= @tree.picture %>
</p>

<p>
  <strong>Tree type:</strong>
  <%= @tree.tree_type %>
</p>

