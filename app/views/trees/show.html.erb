    <strong>Node:</strong>
    <%= n.title %>
  </p>
<% end %>

<p>
  <strong>User:</strong>
  <%= @tree.user %>
</p>

<%= link_to 'Edit', edit_tree_path(@tree) %> |
<%= link_to 'Back', trees_path %>
<p>
  <%= link_to 'Create New Node', controller: 'nodes', action: 'new', :tree_id => @tree %>
